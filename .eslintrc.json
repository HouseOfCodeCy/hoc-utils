{
	"root": true,
	"extends": [
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"plugins": [
		"@typescript-eslint"
	],
	"ignorePatterns": [
		"*.scss",
		"**/public/*",
		"*.lock",
		"*.md",
		"*.log",
		"*.ttf"
	],
	"rules": {
		"@typescript-eslint/no-explicit-any": "off",
		"@typescript-eslint/no-unused-vars": "warn",
		"@typescript-eslint/no-non-null-assertion": "off",
		"@typescript-eslint/ban-ts-comment": "off"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"env": {
		"browser": true,
		"node": true
	},
	"globals": {
		"JSX": true
	}
}